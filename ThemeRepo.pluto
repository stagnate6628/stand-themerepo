local function recurse_dir(dir, paths)
  paths ??= {}
  for filesystem.list_files(dir) as path do
    if filesystem.is_dir(path) then
      recurse_dir(path, paths)
    else
      table.insert(paths, path)
    end
  end
  return paths
end
utils:action('Backup', {}, 'Backup profiles, lua scripts, textures/fonts/tags/tabs, and headers to a directory.', function()
  local date = os.date('%Y-%m-%d-%H:%M:%S')
  local hash = 'backup-' .. crypto.md5(date)

  local backup_dir = dirs['resources'] .. 'Backups\\'
  if filesystem.is_dir(backup_dir .. hash) then
    util.toast('For some reason, this backup already exists...')
    return
  end

  backup_dir ..= hash .. '\\'
  io.makedirs(backup_dir .. 'Headers')
  io.makedirs(backup_dir .. 'Lua Scripts')
  io.makedirs(backup_dir .. 'Profiles')
  io.makedirs(backup_dir .. 'Theme')
  
  for dirs_to_copy as v do
    for recurse_dir(v) as v2 do
      local new_path = v2:lstrip(dirs['stand'])
      if not new_path:startswith('Lua Scripts\\resources\\ThemeRepo\\Backups\\') then
        if f := io.open(v2, 'r') then
          local path = backup_dir .. new_path
          io.makedirs(path:match('^(.+)[\\/]'))
          io.copyto(v2, path)
          f:close()
        end
      end
      util.yield()
    end
    util.yield()
  end

  io.open(backup_dir .. '.created_at', 'wb')
    :write(date)
    :close()

  util.toast($'Backup created under "{hash}"!')
  util.open_folder(backup_dir)
end)
