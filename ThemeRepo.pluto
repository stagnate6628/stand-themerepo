local function empty_dir(dir)
  for io.listdir(dir) as path1 do
    if io.isfile(path1) then
      io.remove(path1)
    else 
      for io.listdir(path1) as path2 do
        io.remove(path2)
      end
      io.remove(path1)
    end
  end
end

