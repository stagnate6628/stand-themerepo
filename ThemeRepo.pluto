header_root:text_input('Install from Zip', {'installfromzip'}, 'For zip files with only images inside (jpg, jpeg, png, gif), not tested with other formats.', function(input, click_type)
  if click_type != 1 then
    return
  end
  
  local host, path = get_host_path(input)
  if not host or not path then
    util.toast("That doesn't look like a url.")
    return
  end
  
  if not path:endswith('.zip') then
    util.toast("That doesn't look like a zip.")
    return
  end

  local zip_path = filesystem.stand_dir() .. path:match("[^/]+$")
  local downloading = true
  async_http.init(host, path, function(body, headers, status_code)
      if status_code ~= 200 then
        util.toast('Failed to download zip.')
        log($'Failed to download zip {host}{path}, got {status_code}')
        goto continue
      end

      io.open(zip_path, 'wb')
        :write(body)
        :close()

      ::continue::
      downloading = false
    end, function()
      downloading = false
    end)
  async_http.dispatch()

  while downloading do
    util.toast('Downloading zip...')
    util.yield()
  end

  empty_dir(dirs['header'])

  local i = 0
  local fr = soup.FileReader(zip_path)
  local zr = soup.ZipReader(fr)
  local bad_format = false
  for zr:getFileList() as file do
    if file.name:endswith('/') then
      bad_format = true
      break
    end
    local ext = file.name:match("%.([^.]+)$")

    if table.contains(img_ext, ext) != nil then
      local f = io.open(dirs['header'] .. file.name, 'wb')
      f:write(zr:getFileContents(file))
      f:close()
    end
    i += 1
  end
  
  if bad_format then
    util.toast('Invalid zip format detected...')
    return
  end

  repeat 
    util.yield()
  until i == #zr:getFileList()

  if get_ref('Stand>Settings>Appearance>Header>Header').value == 200 then
    hide_header()
  end
  use_custom_header()
  
  fr = nil
  zr = nil
  collectgarbage('collect')
  local success, _ = pcall(io.remove, zip_path)
  if not success then
    util.toast($'Failed to delete zip file {zip_path},you can delete it after you close GTA.')
  end
end)

